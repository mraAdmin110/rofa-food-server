<!-- DataTales Example -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#add-modal">
      Tambah
    </button>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>No </th>
            <th>Nama</th>
            <th>Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i = 0; i < kategori.length; i++) {%>
            <tr>
              <td><%= i + 1 %></td>
              <td><%= kategori[i].nama %></td>
              <td>
                <form action="/admin/kategori/<%= kategori[i].id %>?_method=DELETE" method="POST">
                  <a href="javascript:void();" type="button" class="btn btn-warning btn-sm button-update" 
                    data-id="<%= kategori[i].id %>" data-name="<%= kategori[i].nama %>">Edit</a>
                  <button type="submit" class="btn btn-danger btn-sm">Hapus</button>
                </form>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>