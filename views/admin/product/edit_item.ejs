<div class="tab-pane fade show active" id="add-item" role="tabpanel" aria-labelledby="profile-tab">
  <div class="card shadow mb-4 mt-2">
    <div class="card-body">
      <form action="/admin/product/<%= product.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="nama">Nama</label>
          <input type="text" class="form-control" name="nama" value="<%= product.nama %>" placeholder="Masukkan nama item" required>
        </div>
        <div class="form-group">
          <label for="name">Kode</label>
          <input type="text" class="form-control" name="kode" value="<%= product.kode %>" placeholder="Masukkan kode" required>
        </div>
        <div class="form-group">
          <label for="name">Harga</label>
          <input type="number" class="form-control" name="harga" value="<%= product.harga %>" placeholder="Masukkan harga item" required>
        </div>
        <div class="form-group">
          <label for="name">Kategori</label>
          <select class="form-control" name="id_kategori">
            <option value="<%= product.id_kategori._id %>">--- <%= product.id_kategori.nama %> ---</option>
            <% for(let i=0; i < kategori.length; i++) { %>
              <option value="<%= kategori[i].id %>">
                <%= kategori[i].nama %>
              </option>
              <%}%>
          </select>
        </div>
        <div class="form-group">
          <label for="name">Gambar</label>
          <input type="file" class="form-control" name="image" multiple>
        </div>
        <button type="submit" class="btn btn-primary">Simpan</button>
      </form>
    </div>
  </div>
</div>