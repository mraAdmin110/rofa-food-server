<div class="tab-pane fade show active" id="show-item" role="tabpanel" aria-labelledby="home-tab">
  <!-- DataTales Example -->
  <div class="card shadow mb-4 mt-2">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>No </th>
              <th>Name</th>
              <th>Kode</th>
              <th>Harga</th>
              <th>Gambar</th>
              <th>Kategori</th>
              <th>Aksi</th>
              <tbody>
                <% for(let i=0; i < product.length; i++) {%>
                  <tr>
                    <td>
                      <%= i + 1 %>
                    </td>
                    <td>
                      <%= product[i].nama %>
                    </td>
                    <td>
                      <%= product[i].kode %>
                    </td>
                    <td>
                      Rp. <%= product[i].harga %>
                    </td>
                    <td>
                      <img src="http://localhost:3000/<%= product[i].gambar %>" alt="gambar" width="70px">
                    </td>
                    <td><%= product[i].id_kategori.nama %></td>
                    <td>
                      <form action="/admin/product/<%= product[i].id %>/delete?_method=DELETE" method="POST">
                        <!-- <a href="/admin/product/show-detail/<%= product[i].id %>" class="btn btn-info btn-sm"><i class="fas fa-plus"></i></a> -->
                        <a href="/admin/product/<%= product[i].id %>" class="btn btn-warning btn-sm">Edit</a>
                        <button type="submit" class="btn btn-danger btn-sm">Hapus</button>
                      </form>
                    </td>
                  </tr>
                  <% } %>
              </tbody>
            </tr>
          </thead>
        </table>
      </div>
    </div>
  </div>
</div>